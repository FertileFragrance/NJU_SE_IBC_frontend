/**list.wxss**/
.list{
  padding: 15rpx;
}
.navigator{
  overflow: hidden;
}
.list-big{
  display: flex;
  margin-bottom:20rpx;
}
.list-left{
  flex: 0 0 200rpx;
}
.list-img{
  width:200rpx;
  height: 200rpx;
}
.list-right{
  position: relative;
  flex: 1;
  margin-left:20rpx;
}
.list-author{
  position: absolute;
  bottom: 20px;
  color: #999;
  font-size:12px;
}
.list-time{
  position:absolute;
  bottom:0;
  color:#999;
  font-size:12px;
}
.right-text{
  overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}